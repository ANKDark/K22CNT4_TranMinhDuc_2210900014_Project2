@model TTCD1_TranMinhDuc_2210900014.Models.Tmd_NSX

@{
    ViewBag.Title = "Thêm Nhà Sản Xuất";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thêm Nhà Sản Xuất</h4>
                <p class="card-description">
                    <a href="/HomeAdmin/DashBoard" style="text-decoration: none; color: inherit; font-weight: bold;">Trang chủ admin</a> &#47; Thêm nhà sản xuất
                </p>
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "forms-sample" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label for="MaNSX">Mã Nhà Sản Xuất</label>
                        @Html.EditorFor(model => model.MaNSX, new { htmlAttributes = new { @class = "form-control", placeholder = "Mã nhà sản xuất", style = "min-width: 100%;" } })
                        @Html.ValidationMessageFor(model => model.MaNSX, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="TenNSX">Tên Nhà Sản Xuất</label>
                        @Html.EditorFor(model => model.TenNSX, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên nhà sản xuất", style = "min-width: 100%;" } })
                        @Html.ValidationMessageFor(model => model.TenNSX, "", new { @class = "text-danger" })
                    </div>

                    <input type="submit" value="Tạo mới" class="btn btn-primary me-2" />
                    <input type="reset" value="Hủy bỏ" class="btn btn-secondary" />
                }
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Quay Về Danh Sách", "Index", null, new { @class = "btn btn-link text-white fw-bold", style = "font-size: 20px; text-decoration: none;" })
</div>
