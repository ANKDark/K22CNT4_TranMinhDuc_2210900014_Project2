@model TTCD1_TranMinhDuc_2210900014.Models.DashboardViewModel

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách sản phẩm</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Ngày nhập</th>
                                <th>Giá bán</th>
                                <th>Giá nhập</th>
                                <th>Sale</th>
                                <th>Số lượng đã bán</th>
                                <th>Tình trạng</th>
                                <th>Nhà sản xuất</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SanPhams)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.TenSP)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NgayNhap)</td>
                                    <td>@Html.DisplayFor(modelItem => item.GiaBan)</td>
                                    <td>@Html.DisplayFor(modelItem => item.GiaNhap)</td>
                                    <td style="color: @(item.Sale.HasValue && item.Sale.Value ? "green" : "red")">@(item.Sale == true ? "Có" : "Không")</td>
                                    <td>@Html.DisplayFor(modelItem => item.SoLuongDaBan)</td>
                                    <td style="color: @(item.TinhTrang.HasValue && item.TinhTrang.Value ? "green" : "red")">
                                        @(item.TinhTrang == true ? "Còn hàng" : "Hết hàng")
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Tmd_NSX.TenNSX)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

    <hr class="my-4" />
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách khách hàng</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Tài khoản</th>
                                    <th>Điện thoại</th>
                                    <th>Email</th>
                                    <th>Giới tính</th>
                                    <th>Mật khẩu</th>
                                    <th>Ngày sinh</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.KhachHangs)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TaiKhoan)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@(item.GioiTinh == true ? "Nam" : "Nữ")</td>
                                        <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                                        <td style="color: @(item.TrangThai.HasValue && item.TrangThai.Value ? "green" : "red")">
                                            @(item.TrangThai == true ? "Hoạt động" : "Ngưng hoạt động")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4" />
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách Hóa Đơn</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Địa chỉ nhận hàng</th>
                                    <th>Điện thoại nhận hàng</th>
                                    <th>Ngày đặt</th>
                                    <th>Ngày giao</th>
                                    <th>Trạng thái</th>
                                    <th>Số lượng</th>
                                    <th>Giá</th>
                                    <th>Khách hàng</th>
                                    <th>Sản phẩm</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.HoaDons)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.DiaChiNN)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DienThoaiNN)</td>
                                        <td>@(item.NgayDat.HasValue ? item.NgayDat.Value.ToString("dd/MM/yyyy") : string.Empty)</td>
                                        <td>@(item.NgayGiao.HasValue ? item.NgayGiao.Value.ToString("dd/MM/yyyy") : string.Empty)</td>
                                        <td style="color: @(item.TrangThai.HasValue && item.TrangThai.Value ? "green" : "red")">
                                            @(item.TrangThai.HasValue && item.TrangThai.Value ? "Đã giao" : "Chưa giao")
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Tmd_KhachHang.HoTen)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Tmd_SanPham.TenSP)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4" />
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách Nhà Sản Xuất</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Mã nhà sản xuất</th>
                                    <th>Tên Nhà Sản Xuất</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.NhaSanXuats)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.MaNSX)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TenNSX)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="my-4" />
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách Quản Trị Viên</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Mật khẩu</th>
                                    <th>Trạng thái</th>
                                    <th>Tài khoản</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.QuanTris)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.HotenAdmin)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MatkhauAdmin)</td>
                                        <td style="color: @(item.TrangThai.HasValue && item.TrangThai.Value ? "green" : "red")">
                                            @(item.TrangThai == true ? "Hoạt động" : "Ngưng hoạt động")
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Taikhoan)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
