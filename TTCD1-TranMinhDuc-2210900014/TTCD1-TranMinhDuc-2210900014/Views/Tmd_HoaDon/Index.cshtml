@model IEnumerable<TTCD1_TranMinhDuc_2210900014.Models.Tmd_HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
    int i = 1; // For STT (sequence number)
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách hóa đơn</h4>
                <p>
                    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Khách Hàng</th>
                                <th>Địa Chỉ Khách Hàng</th>
                                <th>Điện Thoại Khách Hàng</th>
                                <th>Ngày Đặt</th>
                                <th>Ngày Giao</th>
                                <th>Trạng Thái</th>
                                <th>Số Lượng</th>
                                <th>Giá</th>
                                <th>Sản Phẩm</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Tmd_KhachHang.HoTen)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DiaChiNN)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DienThoaiNN)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NgayDat)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NgayGiao)</td>
                                    <td style="color: @(item.TrangThai.HasValue && item.TrangThai.Value ? "green" : "red")">
                                        @(item.TrangThai == true ? "Đã giao" : "Chưa giao")
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Tmd_SanPham.TenSP)</td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaHD }, new { @class = "btn btn-warning btn-sm" }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaHD }, new { @class = "btn btn-info btn-sm" }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaHD }, new { @class = "btn btn-danger btn-sm" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
