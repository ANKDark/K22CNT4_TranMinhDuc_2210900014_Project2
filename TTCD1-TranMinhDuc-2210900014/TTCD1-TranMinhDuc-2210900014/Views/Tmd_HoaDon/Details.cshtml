@model TTCD1_TranMinhDuc_2210900014.Models.Tmd_HoaDon

@{
    ViewBag.Title = "Chi Tiết Hóa Đơn";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-header">
                <h4>Thông Tin Hóa Đơn</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Khách Hàng</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Tmd_KhachHang.HoTen)</dd>
                    <hr />

                    <dt class="col-sm-3">Địa Chỉ</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChiNN)</dd>
                    <hr />

                    <dt class="col-sm-3">Điện Thoại</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DienThoaiNN)</dd>
                    <hr />

                    <dt class="col-sm-3">Ngày Đặt</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayDat, "{0:dd/MM/yyyy}")</dd>
                    <hr />

                    <dt class="col-sm-3">Ngày Giao</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayGiao, "{0:dd/MM/yyyy}")</dd>
                    <hr />

                    <dt class="col-sm-3">Trạng Thái</dt>
                    <dd class="col-sm-9">
                        @if (Model.TrangThai.HasValue)
                        {
                            if (Model.TrangThai.Value)
                            {
                                <text>Đã giao</text>
                            }
                            else
                            {
                                <text>Chưa giao</text>
                            }
                        }
                        else
                        {
                            <text>Không xác định</text>
                        }
                    </dd>
                    <hr />

                    <dt class="col-sm-3">Số Lượng</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.SoLuong)</dd>
                    <hr />

                    <dt class="col-sm-3">Giá</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Gia)</dd>
                    <hr />

                    <dt class="col-sm-3">Sản Phẩm</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Tmd_SanPham.TenSP)</dd>
                    <hr />
                </dl>
            </div>
            <div class="card-footer text-end">
                @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.MaHD }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Quay Về Danh Sách", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
