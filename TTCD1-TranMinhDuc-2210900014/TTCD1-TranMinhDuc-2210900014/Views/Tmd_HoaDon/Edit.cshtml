@model TTCD1_TranMinhDuc_2210900014.Models.Tmd_HoaDon

@{
    ViewBag.Title = "Edit Invoice";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Chỉnh sửa hóa đơn</h4>
                <p class="card-description">
                    <a href="/HomeAdmin/DashBoard" style="text-decoration: none; color: inherit; font-weight: bold;">Trang chủ admin</a> &#47; Chỉnh sửa hóa đơn
                </p>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaHD)

                    <div class="form-group">
                        <label for="MaKH">Khách Hàng</label>
                        @Html.DropDownList("MaKH", null, htmlAttributes: new { @class = "form-control", style = "min-width: 100%;", placeholder = "Tên khách hàng", })
                        @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="DiaChiNN">Địa Chỉ Khách Hàng</label>
                        @Html.EditorFor(model => model.DiaChiNN, new { htmlAttributes = new { @class = "form-control", placeholder = "Địa Chỉ", style = "min-width: 100%;" } })
                        @Html.ValidationMessageFor(model => model.DiaChiNN, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="DienThoaiNN">Điện Thoại Khách Hàng</label>
                        @Html.EditorFor(model => model.DienThoaiNN, new { htmlAttributes = new { @class = "form-control", placeholder = "Điện Thoại", style = "min-width: 100%;" } })
                        @Html.ValidationMessageFor(model => model.DienThoaiNN, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="NgayDat">Ngày Đặt</label>
                        @Html.TextBoxFor(model => model.NgayDat, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", style = "min-width: 100%;" })
                        @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="NgayGiao">Ngày Giao</label>
                        @Html.TextBoxFor(model => model.NgayGiao, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", style = "min-width: 100%;" })
                        @Html.ValidationMessageFor(model => model.NgayGiao, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="TrangThai">Trạng Thái</label>
                        @Html.DropDownList("TrangThai", new SelectList(new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Đã giao", Value = "true" },
                            new SelectListItem { Text = "Chưa giao", Value = "false" }
                        }, "Value", "Text", Model.TrangThai ?? false ? "true" : "false"), new { @class = "form-control", style = "min-width: 100%;" })
                        @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="SoLuong">Số Lượng</label>
                        @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", placeholder = "Số Lượng", style = "min-width: 100%;" } })
                        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Gia">Giá</label>
                        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", placeholder = "Giá", style = "min-width: 100%;" } })
                        @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="MaSP">Sản Phẩm</label>
                        @Html.DropDownList("MaSP", null, htmlAttributes: new { @class = "form-control", style = "min-width: 100%;", placeholder = "Sản phẩm", })
                        @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
                    </div>

                    <input type="submit" value="Lưu" class="btn btn-primary me-2" />
                    <input type="reset" value="Hủy bỏ" class="btn btn-secondary" />
                }
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Quay Về Danh Sách", "Index", null, new { @class = "btn btn-link text-white fw-bold", style = "font-size: 20px; text-decoration: none;" })
</div>
