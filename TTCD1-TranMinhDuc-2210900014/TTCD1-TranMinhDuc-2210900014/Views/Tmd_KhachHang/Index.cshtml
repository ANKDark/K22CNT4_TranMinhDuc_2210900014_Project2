@model IEnumerable<TTCD1_TranMinhDuc_2210900014.Models.Tmd_KhachHang>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
    int i = 1; // For STT (sequence number) if needed
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách khách hàng</h4>
                <p>
                    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Họ Tên</th>
                                <th>Tài Khoản</th>
                                <th>Điện Thoại</th>
                                <th>Email</th>
                                <th>Giới Tính</th>
                                <th>Ngày Sinh</th>
                                <th>Trạng Thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TaiKhoan)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>
                                        @(item.GioiTinh == true ? "Nam" : "Nữ")
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                                    <td style="color: @(item.TrangThai.HasValue && item.TrangThai.Value ? "green" : "red")">
                                        @(item.TrangThai == true ? "Hoạt động" : "Ngưng hoạt động")
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaKH }, new { @class = "btn btn-warning btn-sm" }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaKH }, new { @class = "btn btn-info btn-sm" }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaKH }, new { @class = "btn btn-danger btn-sm" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
