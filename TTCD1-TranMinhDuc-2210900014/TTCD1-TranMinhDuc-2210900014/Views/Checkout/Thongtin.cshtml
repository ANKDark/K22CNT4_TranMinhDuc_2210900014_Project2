@using TTCD1_TranMinhDuc_2210900014.Models

<h2>Thông tin thanh toán</h2>
<style>
    .payment-card {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 30px;
        margin: 50px auto; /* Căn giữa */
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        background-color: #ffffff; /* Nền trắng cho card */
        max-width: 500px; /* Chiều rộng tối đa */
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        font-family: 'Arial', sans-serif;
        font-weight: bold;
    }

    label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 0.5rem; /* Bo góc cho input */
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s;
        width: calc(100% - 1rem); /* Đảm bảo input không vượt quá 100% */
        padding: 12px 15px; /* Tăng padding cho input */
        box-sizing: border-box; /* Bao gồm padding và border trong chiều rộng */
    }

        .form-control:focus {
            border-color: #28a745; /* Màu xanh lá khi focus */
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }

    .btn-custom {
        background-color: #28a745; /* Màu xanh lá */
        color: white;
        border-radius: 0.5rem; /* Bo góc cho button */
        transition: background-color 0.3s;
        padding: 12px; /* Tăng padding cho button */
    }

        .btn-custom:hover {
            background-color: #218838; /* Màu xanh đậm khi hover */
            color: #ffffff;
        }

        .btn-custom:active {
            background-color: #1e7e34; /* Màu tối hơn khi nhấn */
        }

    .form-group {
        margin-bottom: 20px; /* Khoảng cách 20px giữa các input */
    }
</style>
@{
    Tmd_2210900014_TTCDEntities db = new Tmd_2210900014_TTCDEntities();
    var maKH = Session["UserID"] as string;
    Tmd_KhachHang khachHang = null;
    if (maKH != null)
    {
        int id;
        if (int.TryParse(maKH, out id))
        {
            khachHang = db.Tmd_KhachHang.Find(id);
        }
    }
}

@if (khachHang == null)
{
    <div class="alert alert-danger">Khách hàng không tồn tại. Vui lòng đăng nhập lại.</div>
}
else
{
<div class="container">
    <div class="payment-card d-flex justify-content-center">
        <div class="card p-4" style="width: 400px;">
            <h4 class="text-center mb-4">Địa chỉ giao hàng</h4>
            <form action="@Url.Action("Xacnhan", "Checkout")" method="post">
                <div class="form-group mb-3">
                    <label for="name" class="form-label">Họ và tên:</label>
                    <input type="text" name="HoTen" class="form-control" value="@khachHang.HoTen" required placeholder="Nhập họ và tên" />
                </div>
                <div class="form-group mb-3">
                    <label for="address" class="form-label">Địa chỉ:</label>
                    <input type="text" name="DiaChi" class="form-control" required placeholder="Nhập địa chỉ giao hàng" />
                </div>
                <div class="form-group mb-3">
                    <label for="DienThoai">Số điện thoại:</label>
                    <input type="tel" name="DienThoai" class="form-control" value="@khachHang.DienThoai" required placeholder="Nhập số điện thoại của bạn" pattern="[0-9]{10,11}" title="Số điện thoại chỉ chứa số, từ 10 đến 11 ký tự." />
                </div>
                <div class="form-group mb-3">
                    <label for="PhuongThucThanhToan">Phương thức thanh toán:</label>
                    <select name="PhuongThucThanhToan" class="form-control">
                        <option value="tienmat">Thanh toán tiền mặt khi nhận hàng</option>
                        <option value="chuyenkhoan">Chuyển khoản ngân hàng</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary w-100">Xác nhận</button>
            </form>
        </div>
    </div>
</div>
}
